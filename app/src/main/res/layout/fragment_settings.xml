<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/settings_sync"
        style="@style/SettingsItem"
        android:text="@string/sync_data" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/settings_sync_on_start"
            style="@style/SettingsItem2"
            android:layout_weight="0.70"
            android:text="@string/sync_data_on_app_start" />

        <TextView
            android:id="@+id/settings_sync_on_start_on_off"
            style="@style/SettingsItem2"
            android:layout_weight="0.30"
            android:text="@string/on" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0" />

    <TextView
        android:id="@+id/settings_email_us"
        style="@style/SettingsItem"
        android:text="@string/email_us" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0" />

    <LinearLayout
        android:id="@+id/settings_login_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/settings_login"
            style="@style/SettingsItem"
            android:text="@string/login" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/settings_logged_in_user_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/logged_in_as" />

            <TextView
                android:id="@+id/settings_logged_in_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#c0c0c0" />

    <LinearLayout
        android:id="@+id/settings_version_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/settings_readlist"
            style="@style/SettingsItem"
            android:text="@string/readlist" />

        <TextView
            android:id="@+id/settings_readlist_version"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="hey"
            android:layout_marginTop="-15dp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#c0c0c0" />

    <TextView
        android:id="@+id/settings_share_readlist"
        style="@style/SettingsItem"
        android:text="@string/share_readlist" />

</LinearLayout>