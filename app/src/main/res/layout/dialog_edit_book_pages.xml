<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/update_page_num_lable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_page_number"
        android:textColor="#000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/update_page_num_value"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_page_num_lable"
        android:inputType="number"
        android:textSize="18sp" />

    <Button
        android:id="@+id/update_page_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_page_num_value"
        android:layout_centerHorizontal="true"
        android:text="@string/Update" />

</RelativeLayout>