<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/shelf_details"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_shelf_shelf_name"
                style="@style/ShelfName"
                android:hint="@string/shelf_name" />

            <Button
                android:id="@+id/edit_shelf_add_books"
                style="?android:button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:padding="15dp"
                android:text="@string/add_books_to_shelf" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/colors_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shelf_details"
            android:layout_marginTop="25dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="1">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="0.20">

                <ImageView
                    android:id="@+id/color_pallet_dark_red"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/holo_red_dark"
                    android:contentDescription="@string/dark_red" />

                <ImageView
                    android:id="@+id/color_pallet_dark_red_selected"
                    style="@style/ColourPalletSelected" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="0.20">

                <ImageView
                    android:id="@+id/color_pallet_dark_blue"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/holo_blue_dark"
                    android:contentDescription="@string/dark_blue" />

                <ImageView
                    android:id="@+id/color_pallet_dark_blue_selected"
                    style="@style/ColourPalletSelected" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="0.20">

                <ImageView
                    android:id="@+id/color_pallet_purple"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/holo_purple" />

                <ImageView
                    android:id="@+id/color_pallet_purple_selected"
                    style="@style/ColourPalletSelected" />

            </FrameLayout>


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="0.20">

                <ImageView
                    android:id="@+id/color_pallet_dark_green"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/holo_green_dark" />

                <ImageView
                    android:id="@+id/color_pallet_dark_green_selected"
                    style="@style/ColourPalletSelected" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="0.20">

                <ImageView
                    android:id="@+id/color_pallet_dark_orange"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/holo_orange_dark" />

                <ImageView
                    android:id="@+id/color_pallet_dark_orange_selected"
                    style="@style/ColourPalletSelected" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/colors_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/colors_one"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="1">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="0.20">

                <ImageView
                    android:id="@+id/color_pallet_light_red"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/holo_red_light" />

                <ImageView
                    android:id="@+id/color_pallet_light_red_selected"
                    style="@style/ColourPalletSelected" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="0.20">

                <ImageView
                    android:id="@+id/color_pallet_light_blue"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/holo_blue_light" />

                <ImageView
                    android:id="@+id/color_pallet_light_blue_selected"
                    style="@style/ColourPalletSelected" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="0.20">

                <ImageView
                    android:id="@+id/color_pallet_white"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/white" />

                <ImageView
                    android:id="@+id/color_pallet_white_selected"
                    style="@style/ColourPalletSelected" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="0.20">

                <ImageView
                    android:id="@+id/color_pallet_light_green"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/holo_green_light" />

                <ImageView
                    android:id="@+id/color_pallet_light_green_selected"
                    style="@style/ColourPalletSelected" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="0.20">

                <ImageView
                    android:id="@+id/color_pallet_light_orange"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/holo_orange_light" />

                <ImageView
                    android:id="@+id/color_pallet_light_orange_selected"
                    style="@style/ColourPalletSelected" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/more_colors"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/colors_two"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/edit_shelf_more_colours"
                style="?android:button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="@string/more_colours" />

            <FrameLayout
                android:id="@+id/edit_shelf_colour_selector_wrapper"
                android:layout_width="62dp"
                android:layout_height="37dp"
                android:layout_margin="6dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/edit_shelf_more_colour_sample"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:background="@android:color/holo_green_light"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/edit_shelf_custom_colour_selected"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_check"
                    android:visibility="gone" />
            </FrameLayout>

        </LinearLayout>


    </RelativeLayout>
</ScrollView>